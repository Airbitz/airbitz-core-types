{
  "extends": ["standard", "plugin:flowtype/recommended"],
  "parser": "babel-eslint",
  "plugins": ["standard", "flowtype"],
  "rules": {
    "camelcase": "error",
    "no-throw-literal": "error",
    "no-var": "error",
    "prefer-const": "error",
    "promise/always-return": "error",
    "promise/no-return-wrap": "error",
    "flow/generic-spacing": "off"
  }
}
